<%- include('head'); -%>
  <div class="container-fluid ">
    <header class="row ">
      <div class="col d-flex justify-content-center  align-items-center ">
        <h2><a href="/">DevSpace</a></h2>
      </div>
      <div class="col d-flex justify-content-center align-items-center">
        <form action="/login" method="POST" class="row g-3 ">
          <div class="col-auto">
            
            <input type="text" required class="form-control " placeholder="Username or Email" name="username" >
          </div>
          <div class="col-auto">
            <input type="password" class="form-control"  placeholder="Password" name="password" required minLength="5">
          </div>
          <div class="col-auto ">
            <button type="submit" class="btn btn-primary mb-3">Login</button>
          </div>
        </form>
      </div>

    </header>
    <% if (error.length) { %>
    <div class="row"><div class="col text-center alert alert-danger"><h5 ><%= error[0]%></h4> </div></div>  
    <% } %>
    <main class="row">
      <div class="col-6 d-flex flex-column  justify-content-center  align-items-center">
        <div class="geek_space">
          <h1>Space for Geeks !!</h1>
          <p>Enjoy post and tweets on new technologies by developers for developers</p>
        </div>
      </div>
      <div class="col-6 d-flex flex-column  justify-content-center align-items-center ">
        <form action="/signup" method="POST" >
          <div class="form-group">
            <label for="Username" class="form-label">Username</label>
            <input type="text" class="form-control signup-field" id="Username" placeholder="Username" required name="username"  minLength='5'>
          </div>
          <div class="form-group">
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control signup-field" id="name" placeholder="Name" required name="name"  minLength='1'>
          </div>
          <div class="form-group">
            <label for="userProfile" class="form-label">Profile</label>
            <select class=" form-control custom-select signup-field"  id="userProfile" name="profile">
              <option value="">Select </option>
              <option value="Front-end developer">Front-end developer</option>
              <option value="Back-end developer">Back-end developer</option>
              <option value="Full-stack developer">Full-stack developer</option>
              <option value="System Engineer">System Engineer</option>
            </select>
          </div>
          <div class="form-group">
            <label for="exampleInputEmail1" class="form-label">Email address</label>
            <input type="email" class="form-control signup-field" id="exampleInputEmail1" aria-describedby="emailHelp"
              placeholder="Enter email" required name="email">

          </div>
          <div class="form-group">
            <label for="exampleInputPassword1" class="form-label">Password</label>
            <input type="password" class="form-control signup-field" id="exampleInputPassword1" placeholder="Password" required minLength="5"
              name="password">
          </div>
          <div class="form-group">
            <label for="Password1" class="form-label">Confirm Password</label>
            <input type="password" class="form-control signup-field" id="Password1" placeholder="Confirm Password"  minLength="5"
              required name="confirm_password">
          </div>
          <button type="submit" class="btn btn-primary">Signup</button>
        </form>
      </div>

    </main>
    <footer class="row">
      <div class="col">
        <h6>Copyright@ 2023 Devspace. All rights reserved</h6>
      </div>

    </footer>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
    crossorigin="anonymous"></script>
  <script src="https://kit.fontawesome.com/0105de346b.js" crossorigin="anonymous"></script>
</body>

</html>